{
  "name": "@mirrorworld/sdk",
  "version": "0.1.0",
  "license": "MIT",
  "private": "true",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "postinstall": "preconstruct dev",
    "dev": "preconstruct dev",
    "clean": "yarn workspaces run clean",
    "prebuild": "yarn clean",
    "build": "yarn prebuild && preconstruct build",
    "start": "preconstruct watch",
    "release": "yarn build && yarn publish",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "pkg": "manypkg run",
    "pkgs:check": "manypkg check",
    "pkgs:fix": "manypkg fix",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "test": "NODE_ENV=development jest --ci --coverage --maxWorkers=2",
    "test:watch": "NODE_ENV=development jest --verbose --watch --maxWorkers=2",
    "version:dev": "changeset version --snapshot dev",
    "release:dev": "changeset pre exit && changeset version --snapshot dev && changeset publish --tag dev"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "author": "codebender828",
  "size-limit": [
    {
      "path": "packages/core/mirrorworld-core.esm.js",
      "limit": "10 KB"
    },
    {
      "path": "packages/core/mirrorworld-core.cjs.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "@babel/core": "^7.15.0",
    "@babel/plugin-transform-runtime": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/runtime": "^7.18.9",
    "@changesets/cli": "^2.23.0",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@happy-dom/jest-environment": "^6.0.4",
    "@manypkg/cli": "^0.18.0",
    "@preconstruct/cli": "^2.1.1",
    "@size-limit/preset-small-lib": "^5.0.3",
    "@types/dotenv-defaults": "^2.0.1",
    "@types/jest": "^28.1.3",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "axios": "^0.27.2",
    "concurrently": "^6.2.1",
    "dotenv-defaults": "^5.0.2",
    "esbuild": "^0.14.48",
    "esbuild-jest": "^0.5.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "lint-staged": "^13.0.3",
    "mailslurp-client": "^15.13.1",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^5.0.3",
    "tslib": "^2.3.1",
    "typescript": "^4.3.5",
    "vue": "^3.2.6"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "jiti": "^1.17.1"
  }
}
